<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <WebView
        android:id="@+id/webViewMain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <com.crossy.app.everythinghouse.utils.StickyScrollView
        android:id="@+id/stickyScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:tag="sticky">

                <IconTextView
                    android:id="@+id/textViewMyEntrust"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:text="{fa-tags}我的委托"
                    android:textSize="20sp"
                    android:textColor="@color/everything_house_gray" />

                <IconTextView
                    android:id="@+id/textViewMyEntrustMore"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:layout_margin="10dp"
                    android:text="更多{fa-angle-double-right}"
                    android:textSize="16sp"
                    android:textColor="@color/everything_house" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:text=""/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:tag="sticky">

                <IconTextView
                    android:id="@+id/textViewMyOrder"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:text="{fa-tags}我的接单"
                    android:textSize="20sp"
                    android:textColor="@color/everything_house_gray" />

                <IconTextView
                    android:id="@+id/textViewMyOrderMore"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:layout_margin="10dp"
                    android:text="更多{fa-angle-double-right}"
                    android:textSize="16sp"
                    android:textColor="@color/everything_house" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:text=""/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:tag="sticky">

                <IconTextView
                    android:id="@+id/textViewMyComment"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:text="{fa-tags}待委托评价"
                    android:textSize="20sp"
                    android:textColor="@color/everything_house_gray" />

                <IconTextView
                    android:id="@+id/textViewMyCommentMore"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:layout_margin="10dp"
                    android:text="更多{fa-angle-double-right}"
                    android:textSize="16sp"
                    android:textColor="@color/everything_house" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:text=""/>
        </LinearLayout>
    </com.crossy.app.everythinghouse.utils.StickyScrollView>
</LinearLayout>